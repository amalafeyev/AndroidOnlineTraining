<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malafeyev.alexey.mobapp.HelloRelative">

    <Button
        android:id="@+id/btnToastRltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="Toast"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txvToastRltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnToastRltv"
        android:layout_weight="2"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/show_initial_value"
        android:textAlignment="center"
        android:textColor="@color/myBackgroundColor"
        android:textSize="@dimen/show_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCountRltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvToastRltv"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="Count"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
